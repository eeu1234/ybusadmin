<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="food">

	<!-- 메뉴 조회 -->
	<select id="getFoodList" parameterType="String" resultType="com.test.spring.dto.FoodDTO">
		SELECT menuSeq, date, menuFlag, workDate, worker FROM MENU WHERE menuLocation=#{menuLocation} group by date;
	</select>
	
	<!-- 날짜 조회 -->
	<select id="getFoodListByDate" parameterType="String" resultType="com.test.spring.dto.FoodDTO">
		SELECT * FROM MENU WHERE date=#{date};
	</select>
	
	
	
</mapper>